server {
  listen <%= @listen_ip %>:80;

  server_name <%= @server_name %>;

  access_log <%= node['nginx']['directories']['log_dir'] %>/<%= @server_name %>.access.log detailed;
  error_log <%= node['nginx']['directories']['log_dir'] %>/<%= @server_name %>.error.log;

  location / {
    root <%= node['aptly']['rootdir'] %>/public;
    autoindex on;
  }
}
